<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.birkeland.terminus.CreateEventActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="min"
        app:layout_constraintBottom_toBottomOf="@+id/editTextBreakTime"
        app:layout_constraintStart_toEndOf="@+id/editTextBreakTime" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        app:layout_constraintStart_toStartOf="@+id/timeInputToCreateEvent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/timeInputFromCreateEvent"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="24"
        android:maxLength="5"
        android:text="16:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/timeInputToCreateEvent"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="time"
        android:maxLength="5"
        android:text="20:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorAccent"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutJobViewCreateEvent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/from"
        app:layout_constraintStart_toStartOf="@+id/timeInputFromCreateEvent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateEventDate" />

    <Button
        android:id="@+id/buttonChooseWorkplaceCreateEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/choose_workplace"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutJobViewCreateEvent"
        app:layout_constraintStart_toStartOf="@+id/spinnerRepeatPeriod"
        app:layout_constraintTop_toBottomOf="@+id/spinnerRepeatPeriod" />

    <EditText
        android:id="@+id/editTextBreakTime"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="30"
        android:inputType="number"
        android:maxLength="2"
        android:singleLine="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/checkBoxNightshift"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/break_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerRepeatPeriod"
        app:layout_constraintStart_toStartOf="@+id/editTextBreakTime"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNightshift" />

    <LinearLayout
        android:id="@+id/linearLayoutJobViewCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:backgroundTintMode="src_atop"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChooseWorkplaceCreateEvent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imageViewCreateEvent"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/textViewCreateEventJobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:textColor="?attr/textColor"
            android:textSize="24dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSubmitWorkday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/add_workday"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutJobViewCreateEvent"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutJobViewCreateEvent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workplace"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toBottomOf="@+id/buttonChooseWorkplaceCreateEvent"
        app:layout_constraintStart_toStartOf="@+id/editTextBreakTime"
        app:layout_constraintTop_toTopOf="@+id/buttonChooseWorkplaceCreateEvent" />

    <CheckBox
        android:id="@+id/checkBoxNightshift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/nightshift"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/timeInputFromCreateEvent"
        app:layout_constraintTop_toBottomOf="@+id/timeInputFromCreateEvent" />

    <RadioGroup
        android:id="@+id/radioGroupRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/timeInputToCreateEvent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.birkeland.terminus.customViews.ToggleRadioButton
            android:id="@+id/radioButtonRepeatEachWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/each_week"
            android:textSize="12sp" />

        <com.birkeland.terminus.customViews.ToggleRadioButton
            android:id="@+id/radioButtonRepeatEveryOtherWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/every_other_week"
            android:textSize="12sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repeat"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/radioGroupRepeat"
        app:layout_constraintTop_toTopOf="@+id/checkBoxNightshift" />

    <TextView
        android:id="@+id/textViewCreateEventError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toTopOf="@+id/buttonSubmitWorkday"
        app:layout_constraintStart_toStartOf="@+id/buttonSubmitWorkday"
        tools:text="Error message" />

    <Spinner
        android:id="@+id/spinnerRepeatPeriod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/For"
        app:layout_constraintStart_toStartOf="@+id/radioGroupRepeat"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupRepeat" />

    <TextView
        android:id="@+id/textViewCreateEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:textColor="?attr/textColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mandag 21.01.2020" />

</androidx.constraintlayout.widget.ConstraintLayout>